{
  "name": "@mbaza-chatbot/rasa-kbal",
  "version": "0.0.1",
  "description": "Mbaza Chatbot Rasa Abstraction Layer",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:watch-all": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --detectOpenHandles --config ./test/jest-e2e.json",
    "test:e2e:cov": "jest --coverage --config ./test/jest-e2e.json",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run build && npm run typeorm migration:generate -- -n",
    "migration:run": "npm run build && npm run typeorm migration:run",
    "migration:create": "npm run build && npm run typeorm migration:create -- -n",
    "doc": "npx typedoc --logLevel Verbose --options typedoc.json"
  },
  "dependencies": {
    "@nestjs/axios": "^0.0.2",
    "@nestjs/common": "^8.1.2",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.1.2",
    "@nestjs/platform-express": "^8.1.2",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/typeorm": "^8.0.2",
    "axios-cache-adapter": "^2.7.3",
    "bcrypt": "^5.0.1",
    "cache-manager": "^3.4.4",
    "cheerio": "1.0.0-rc.10",
    "express": "^4.17.1",
    "md5": "^2.3.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.4",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^8.1.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager": "^3.4.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.18.63",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^27.3.1",
    "jest-html-reporter": "^3.4.2",
    "jest-junit": "^13.0.0",
    "node-mocks-http": "^1.11.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.7",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputName": "test-results.xml",
          "uniqueOutputName": "false",
          "classNameTemplate": "{classname}",
          "titleTemplate": "{classname} - {title}",
          "ancestorSeparator": "â€º",
          "usePathForSuiteName": "true"
        }
      ],
      [
        "../node_modules/jest-html-reporter",
        {
          "pageTitle": "Mbaza Chatbot KBAL for Rasa - Unit Test Report"
        }
      ]
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "clover",
      "cobertura",
      "html",
      "json"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!app.module.ts",
      "!main.ts",
      "!migrations/",
      "!**/external-api.action-handler.ts",
      "!**/pg.connection.ts",
      "!**/pg.configuration.ts",
      "!**/zammad.query-builder.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
